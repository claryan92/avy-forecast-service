# Use a newer Go toolchain so dev helper tools that require newer go versions can be installed.
# Upgrade this if you need an even newer toolchain.
FROM golang:1.25-alpine
WORKDIR /app
RUN apk add --no-cache git curl &&     go install github.com/air-verse/air@latest
COPY go.mod go.sum ./
RUN go mod download
COPY . .
EXPOSE 8080
CMD ["air"]
